{% extends 'base.html.twig' %}

{% block title %}Ajouter un avis{% endblock %}

{% block body %}
    <h1>Ajouter un avis</h1>

    {{ form_start(form) }}
        {{ form_row(form.commentaire) }}
        {{ form_row(form.note) }}

        {{ form_widget(form.livre, {'attr': {'hidden': 'hidden'}}) }}

        {{ form_widget(form.user, {'attr': {'hidden': 'hidden'}}) }}
    
        {{ form_row(form.statut, {'attr': {'hidden': 'hidden'}}) }}

        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}